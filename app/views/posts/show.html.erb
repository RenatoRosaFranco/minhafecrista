<% provide :title, @post.title %>

<div class="container" style="margin-top: 80px;">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-12">
        <div class="col-md-12">
          <ul class="breadcrumb">
            <li><%= link_to 'Home',  root_path %></li>
            <li><%= link_to 'Posts', posts_path %></li>
            <li><%= link_to  @post.title, post_path(@post) %></li>
          </ul>
        </div>
      </div>

      <div class="col-md-9 col-md-offset-1">
        <div id="title">
          <div class="col-md-8">
            <h1><%= @post.title %></h1>
            <p><%= @post.description %></p>
            <span><b>5</b> Min de Leitura</span>
          </div>
          <div class="col-md-4">
            <% if @post.user.present? %>
              <h1><%= @post.user.name %></h1>
              <p>hรก <%= link_to time_ago_in_words(@post.created_at) %></p>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div id="content">
            <%= @post.content %>
          </div>
        </div>

        <div class="row">
          <div id="tags">
            <% @post.tags.split(/\s/).each do |tag| %>
              <span class="badge"><%= tag %></span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div id="comment">
          <%= render partial: 'shared/disqus' %>
        </div>
      </div>
    </div>
  </div>
</div>