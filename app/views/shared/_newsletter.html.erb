<%= form_for(:search) do |f| %>
  <div class="field col-md-3 col-md-offset-2">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="far fa-user"></i>
      </div>
      <%= f.text_field :name, class: 'form-control',
      required: 'required', placeholder: 'Nome Completo' %>
    </div>
  </div>

  <div class="field col-md-3">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="far fa-envelope-open"></i>
      </div>
      <%= f.email_field :email, class: 'form-control',
      required: 'required', placeholder: 'E-mail' %>
    </div>
  </div>

  <div class="field col-md-3" style="margin-left: -50px;">
    <%= f.submit 'Inscreva-me',
                 class: 'btn btn-primary btn-lg top' %>
  </div>
<% end %>